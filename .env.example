# LumaEngine Configuration

# Application Settings
APP_NAME="LumaEngine"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# API Settings
API_PREFIX="/api/v1"
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database
DATABASE_URL=postgresql://aid:aid_password@localhost:5432/aid_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Temporal
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=aid-deployment

# LLM Providers - REQUIRED: At least one must be configured
OPENAI_API_KEY=sk-your_openai_api_key_here_replace_this
ANTHROPIC_API_KEY=your_anthropic_api_key_here_replace_this
OLLAMA_BASE_URL=http://localhost:11434

# LLM Configuration
LLM_PRIMARY_PROVIDER=openai
LLM_FALLBACK_PROVIDERS=anthropic,ollama
LLM_MAX_RETRIES=3
LLM_TIMEOUT=30

# Infrastructure - Replace with actual values
PROXMOX_HOST=proxmox.example.com
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your_secure_proxmox_password_replace_this
PROXMOX_VERIFY_SSL=false

# GitLab
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_PROJECT_NAMESPACE=aid-deployments

# MinIO/Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=aid-artifacts

# Monitoring
PROMETHEUS_GATEWAY=
GRAFANA_URL=
LOKI_URL=

# Security - CRITICAL: Change these in production
SECRET_KEY=your_super_secure_secret_key_here_change_this_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=your_32_character_encryption_key_here

# CORS
ALLOWED_ORIGINS=*
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Performance
WORKER_CONCURRENCY=4
MAX_REQUEST_SIZE=16777216

# Features
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
